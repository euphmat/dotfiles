set fenc=utf-8
set nobackup
set noswapfile
set autoread
set showcmd
set encoding=utf8
set termencoding=utf8
set fileencodings=utf-8
set fileformats=unix,dos
set number
set smartindent
set showmatch
set tabstop=2
set expandtab
set hlsearch
set autoindent
syntax on

nmap <Esc><Esc> :nohlsearch<CR><Esc>
inoremap <silent> jj <ESC>
vnoremap  <Up>     <nop>
vnoremap  <Down>   <nop>
vnoremap  <Left>   <nop>
vnoremap  <Right>  <nop>
inoremap  <Up>     <nop>
inoremap  <Down>   <nop>
inoremap  <Left>   <nop>
inoremap  <Right>  <nop>
noremap   <Up>     <nop>
noremap   <Down>   <nop>
noremap   <Left>   <nop>
noremap   <Right>  <nop>
